{
  "name": "twicusslauncher",
  "version": "1.0.0",
  "description": "A launcher for minecraft twicusstumble server.",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "build": {
    "appId": "net.ddns.twicusstumble.twicusslauncher",
    "files": [
      "main.js",
      "app/",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "nekochoc0",
  "license": "ISC",
  "dependencies": {
    "@azure/msal-node": "^1.15.0",
    "axios": "^1.3.2",
    "extract-zip": "^2.0.1",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0"
  }
}
